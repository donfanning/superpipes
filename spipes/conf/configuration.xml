<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <commons>
        <common id="fbfabienkey">
            <params>
                <param name="key" value="KEY" />
            </params>
        </common>
        <common id="fbfabiensecret">
            <params>
                <param name="secret" value="SECRET" />
            </params>
        </common>
    </commons>
    <nodes>
        <node id="rss-vauchelles" type="com.vaushell.spipes.nodes.rss.N_RSS">
            <!-- RSS doesn't react to a message. It catchs news at regular interval -->
            <params>
                <param name="url" value="http://feeds.feedburner.com/fabienvauchelles" />
                <param name="delay" value="2000" />
            </params>
            <out>
                <transform type="com.vaushell.spipes.transforms.done.T_Done" />
                <transform type="com.vaushell.spipes.transforms.date.T_Date">
                    <!-- It's only a filter. Local works. So it's a transform. -->
                    <params>
                        <param name="date-min" value="11/11/2013 10:00" />
                    </params>
                </transform>
                <transform type="com.vaushell.spipes.transforms.bitly.T_Shorten">
                    <params>
                        <param name="username" value="USERNAME" />
                        <param name="apikey" value="KEY" />
                    </params>
                </transform>
            </out>
        </node>
        <node id="fbpost" type="com.vaushell.spipes.nodes.fb.N_FB_Post" commons="fbfabienkey,fbfabiensecret" />
        <node id="fbpostlike" type="com.vaushell.spipes.nodes.fb.N_FB_PostLike" commons="fbfabienkey,fbfabiensecret" />
        <node id="twpost" type="com.vaushell.spipes.nodes.twitter.N_TW_Post">
            <params>
                <param name="key" value="KEY" />
                <param name="secret" value="SECRET" />
            </params>
        </node>
        <node id="lnkpost" type="com.vaushell.spipes.nodes.linkedin.N_LNK_Post">
            <params>
                <param name="key" value="KEY" />
                <param name="secret" value="SECRET" />
            </params>
        </node>
        <node id="tbpost" type="com.vaushell.spipes.nodes.tumblr.N_TB_Post">
            <params>
                <param name="blogname" value="BLOGNAME" />
                <param name="key" value="KEY" />
                <param name="secret" value="SECRET" />
            </params>
        </node>
    </nodes>
    <routes>
        <route source="rss-vauchelles" destination="twpost" />
        <route source="rss-vauchelles" destination="fbpost" />
        <route source="fbpost" destination="fbpostlike" />
        <route source="rss-vauchelles" destination="lnkpost" />
        <route source="rss-vauchelles" destination="tbpost" />
    </routes>
</configuration>
